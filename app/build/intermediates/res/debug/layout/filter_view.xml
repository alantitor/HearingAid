<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/filter_view_board"
    android:background="#e0e0e0"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:padding="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="頻帶"
            android:id="@+id/filter_view_text1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#0080ff"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="6"
                    android:id="@+id/filter_view_lowBand"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter_view_text3"
                    android:text="~"
                    android:textColor="#0080ff"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/filter_view_lowBand"
                    android:layout_toEndOf="@+id/filter_view_lowBand" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="6"
                    android:id="@+id/filter_view_highBand"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/filter_view_text3"
                    android:layout_toEndOf="@+id/filter_view_text3" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout><!-- From: file:/home/alan/Projects/Android/HearingAid/app/src/main/res/layout/filter_view.xml -->